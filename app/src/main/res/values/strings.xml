    ========================================================================
    New full-screen theme selection with organized table layout
    -->

    <!-- Column headers for theme table -->
    <string name="theme_header_light">Light</string>
    <string name="theme_header_dark">Dark</string>

    <!-- Individual theme names (alphabetically organized) -->
    <string name="theme_solarized">Solarized</string>
    <string name="theme_white">White</string>
    <string name="theme_amoled">Amoled</string>
    <string name="theme_dracula">Dracula</string>

    <!-- Theme selection screen elements -->
    <string name="theme_selection_hint">Tap a theme to apply it</string>
    <string name="theme_current_indicator">CURRENT</string>

    <!-- Theme application messages -->
    <string name="msg_theme_solarized">Solarized theme applied</string>
    <string name="msg_theme_white">White theme applied</string>
    <string name="msg_theme_amoled">AMOLED theme applied</string>
    <string name="msg_theme_dracula">Dracula theme applied</string>

    <!-- Activity title -->
    <string name="activity_theme_selection">Choose Theme</string>


    <!--
    ========================================================================
    STATUS CONTEXT MESSAGES
    ========================================================================
    Additional context shown below main status
    -->

    <!--
    Shown during active sleep session with duration
    CONTEXT: "Sleeping..." appears below "SLEEPING" status
    -->
    <string name="status_sleeping_msg">Sleepingâ€¦</string>

    <!--
    Shown when current time is past intended bedtime
    CONTEXT: Instead of work time, shows user should be sleeping
    -->
    <string name="status_past_bedtime">Past bedtime</string>

    <!--
    Shown when target wake time has already passed today
    CONTEXT: Wake time was 7:00 AM but it's now 9:00 AM
    -->
    <string name="status_wake_passed">Wake time passed</string>

    <!--
    ========================================================================
    FORMATTED TEXT PATTERNS
    ========================================================================
    Templates for dynamic content - translators should preserve %s/%1$s placeholders
    -->

    <!--
    Shows current session duration
    CONTEXT: %s gets replaced with time like "2h 15m"
    EXAMPLE: "Session: 2h 15m"
    -->
    <string name="format_session_duration">Session: %s</string>

    <!--
    Shows available sleep time remaining
    CONTEXT: %s gets replaced with time until wake
    EXAMPLE: "Available: 6h 45m"
    -->
    <string name="format_sleep_available">Available: %s</string>

    <!--
    Template for exported filename
    CONTEXT: %s gets replaced with timestamp
    EXAMPLE: "descansa_data_1648594820.csv"
    -->
    <string name="export_filename_template">descansa_data_%s.csv</string>

    <!--
    ========================================================================
    SUCCESS MESSAGES
    ========================================================================
    Brief confirmations shown in toast notifications
    -->

    <!-- Confirmation when sleep session starts -->
    <string name="msg_sleep_started">Sleep session started</string>

    <!-- Confirmation when sleep session ends -->
    <string name="msg_sleep_ended">Sleep session ended</string>

    <!--
    Confirmation when data export completes
    CONTEXT: %1$s gets replaced with filename
    EXAMPLE: "Exported: my_data.csv"
    -->
    <string name="msg_data_exported">Exported: %1$s</string>

    <!-- Confirmation when all data is cleared -->
    <string name="msg_data_cleared">Data cleared</string>

    <!-- Confirmation when settings are saved -->
    <string name="msg_settings_saved">Settings saved</string>

    <!-- Confirmation when theme is applied -->
    <string name="msg_theme_applied">Theme applied</string>

