    ========================================================================
    ERROR MESSAGES
    ========================================================================
    Error messages for when operations fail
    -->

    <!-- Generic export failure message -->
    <string name="error_export_failed">Export failed</string>

    <!--
    Detailed export error with technical details
    CONTEXT: %s gets replaced with technical error message
    EXAMPLE: "Export error: Permission denied"
    -->
    <string name="error_export_error">Export error: %s</string>

    <!--
    Error when user enters invalid time in settings
    CONTEXT: User entered "25:70" or negative numbers
    -->
    <string name="error_invalid_time">Invalid time format</string>

    <!-- Error when theme change fails -->
    <string name="error_theme_failed">Theme change failed</string>

    <!--
    ========================================================================
    DEBUG INFORMATION
    ========================================================================
    Technical status messages - can be more technical in translation
    -->

    <!-- Debug message when app starts successfully -->
    <string name="debug_core_ready">Core Ready</string>

    <!-- Debug message when sleep session is active -->
    <string name="debug_session_active">Session Active</string>

    <!--
    Debug message showing core status with session count
    CONTEXT: %d gets replaced with number of recorded sessions
    EXAMPLE: "Core Ready - 15 sessions"
    -->
    <string name="debug_core_status">Core Ready - %d sessions</string>

    <!--
    ========================================================================
    DEFAULT/FALLBACK VALUES
    ========================================================================
    Displayed when no data is available
    -->

    <!--
    Shown when no data exists yet
    CONTEXT: In place of time values when user hasn't slept yet
    -->
