<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    ========================================================================
    DESCANSA - Sleep Tracking App Strings
    ========================================================================

    TRANSLATION NOTES:
    - This app helps users track sleep and manage work time
    - Keep translations concise - mobile screen space is limited
    - Times are displayed in format "8h 30m" (hours and minutes)
    - Maintain consistent terminology throughout
    - Test translations with longer text to ensure UI doesn't break

    CONTEXT: This is a minimalist sleep tracking app that:
    1. Tracks when user starts/stops sleeping
    2. Calculates remaining work time before bedtime
    3. Shows sleep statistics and averages
    4. Exports data for analysis

    ========================================================================
    -->

    <!--
    ========================================================================
    APP IDENTITY
    ========================================================================
    -->

    <!--
    App name - appears in launcher, notifications, system dialogs
    CONTEXT: "Descansa" means "rest" in Spanish - consider keeping original or translating
    -->
    <string name="app_name">Descansa</string>

    <!--
    ========================================================================
    MAIN STATUS MESSAGES
    ========================================================================
    These appear as the main status at top of screen
    -->

    <!--
    User is currently awake and using the app normally
    CONTEXT: Default state when app opens and user hasn't started sleep
    -->
    <string name="status_awake">AWAKE</string>

    <!--
    User is currently in a sleep session (actively sleeping)
    CONTEXT: Shows when user tapped "Start Sleep" and session is running
    -->
    <string name="status_sleeping">SLEEPING</string>

    <!--
    App is ready to use, neutral state
    CONTEXT: Initial state when app first loads
    -->
    <string name="status_ready">Ready</string>

    <!--
    It's currently within the user's intended sleep hours
    CONTEXT: Shows when current time is between bedtime and wake time
    -->
    <string name="status_sleep_window">Sleep Window Active</string>

    <!--
    User's wake time has passed, greeting them
    CONTEXT: Shows after user's target wake time when they open the app
    -->
    <string name="status_good_morning">Good Morning!</string>

    <!--
    ========================================================================
    ACTION BUTTONS - PRIMARY
    ========================================================================
    Main interaction buttons - keep short for mobile screens
    -->

    <!--
    Button to begin tracking sleep session
    CONTEXT: Large button user taps when going to bed
    -->
    <string name="btn_start_sleep">Start Sleep</string>

    <!--
    Button to end current sleep session
    CONTEXT: Same button as start_sleep, but text changes when session is active
    -->
    <string name="btn_end_sleep">End Sleep</string>

    <!--
    ========================================================================
    ACTION BUTTONS - SECONDARY
    ========================================================================
    Smaller utility buttons - keep very short due to limited space
    -->

    <!--
    Export sleep data to file
    CONTEXT: Small button that saves data to Documents folder
    -->
    <string name="btn_export_short">Export</string>

    <!--
    Delete all sleep data
    CONTEXT: Small button with warning color, opens confirmation dialog
    -->
    <string name="btn_clear_short">Clear</string>

    <!--
    Open settings dialog
    CONTEXT: Small button in header to change sleep goals and wake time
    -->
    <string name="btn_settings_short">Settings</string>

    <!--
    Open theme selection menu
    CONTEXT: Small button in header to change app appearance
    -->
    <string name="btn_theme">Theme</string>

    <!--
    ========================================================================
    DIALOG BUTTONS
    ========================================================================
    Standard dialog action buttons
    -->

    <!-- Save changes in settings dialog -->
    <string name="btn_save">Save</string>

    <!-- Cancel action, close dialog without saving -->
    <string name="btn_cancel">Cancel</string>

    <!-- Confirm dangerous action (like clearing data) -->
    <string name="btn_clear">Clear</string>

    <!-- Go back to previous menu level -->
    <string name="btn_back">Back</string>

    <!--
    ========================================================================
    INFORMATION LABELS
    ========================================================================
    Labels for the data grid - keep short, they're paired with values
    -->

    <!--
    Label for time remaining until bedtime
    CONTEXT: Shows next to countdown timer "Work Time: 4h 30m"
    -->
    <string name="label_work_time_short">Work Time:</string>

    <!--
    Label for duration of most recent sleep
    CONTEXT: Shows next to time value "Last Sleep: 7h 45m"
    -->
    <string name="label_last_sleep_short">Last Sleep:</string>

    <!--
    Label for average sleep over recent days
    CONTEXT: Shows next to calculated average "7-Day Avg: 8h 15m"
    -->
    <string name="label_average_short">7-Day Avg:</string>

    <!--
    Label for total number of recorded sleep sessions
    CONTEXT: Shows next to number "Sessions: 23"
    -->
    <string name="label_sessions_short">Sessions:</string>

    <!--
    ========================================================================
    SETTINGS DIALOG
    ========================================================================
    Labels and content for the settings/configuration dialog
    -->

    <!-- Title of settings dialog -->
    <string name="dialog_settings_title">Sleep Settings</string>

    <!--
    Label for target sleep duration input
    CONTEXT: Above text field where user enters desired sleep hours (like "8.0")
    -->
    <string name="label_target_sleep_hours">Target Sleep Hours:</string>

    <!--
    Label for wake time input section
    CONTEXT: Above the hour:minute time picker controls
    -->
    <string name="label_wake_time">Wake Time:</string>

    <!--
    Separator between hour and minute inputs
    CONTEXT: Appears between two number fields "08 : 30"
    -->
    <string name="label_time_separator"> : </string>

    <!--
    ========================================================================
    INPUT HINTS
    ========================================================================
    Placeholder text in input fields to guide users
    -->

    <!-- Hint for sleep hours input field -->
    <string name="hint_sleep_hours">8.0</string>

    <!-- Hint for hour input (0-23) -->
    <string name="hint_hour">Hour</string>

    <!-- Hint for minute input (0-59) -->
    <string name="hint_minute">Min</string>

    <!--
    ========================================================================
    DATA CLEARING DIALOG
    ========================================================================
    Confirmation dialog for destructive action
    -->

    <!-- Title of dangerous action confirmation -->
    <string name="dialog_clear_title">Clear All Data</string>

    <!--
    Confirmation message for clearing data
    CONTEXT: Warns user before permanently deleting all sleep records
    -->
    <string name="dialog_clear_message">Delete all sleep sessions?</string>

