<resources>
    <style name="Theme.Descansa.RosePine" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/rose_primary</item>
        <item name="colorPrimaryVariant">@color/rose_primary_variant</item>
        <item name="colorOnPrimary">@color/rose_on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/rose_secondary</item>
        <item name="colorSecondaryVariant">@color/rose_secondary_variant</item>
        <item name="colorOnSecondary">@color/rose_on_secondary</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/rose_background</item>
        <item name="colorSurface">@color/rose_surface</item>
        <item name="colorOnSurface">@color/rose_on_surface</item>
        <item name="colorOnBackground">@color/rose_on_background</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/rose_primary_variant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/rose_background</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/rose_text_primary</item>
        <item name="android:textColorSecondary">@color/rose_text_secondary</item>
        <item name="android:textColorTertiary">@color/rose_text_tertiary</item>

        <!-- Components -->
        <item name="colorControlNormal">@color/rose_text_secondary</item>
        <item name="colorControlActivated">@color/rose_primary</item>
        <item name="colorControlHighlight">@color/rose_accent</item>
        <item name="colorError">@color/rose_error</item>
        <item name="colorOnError">@color/rose_on_error</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.RosePine.Button</item>
        <item name="borderlessButtonStyle">@style/Widget.RosePine.Button.TextButton</item>

        <!-- Window Background -->
        <item name="android:windowBackground">@color/rose_background</item>
    </style>

    <!-- Custom button styles for Rose Pine -->
    <style name="Widget.RosePine.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/rose_primary</item>
        <item name="android:textColor">@color/rose_on_primary</item>
        <item name="rippleColor">@color/rose_love</item>
    </style>

    <style name="Widget.RosePine.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/rose_primary</item>
        <item name="rippleColor">@color/rose_foam</item>
    </style>

    <style name="Widget.RosePine.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/rose_primary</item>
        <item name="android:textColor">@color/rose_primary</item>
        <item name="rippleColor">@color/rose_foam</item>
    </style>
</resources>