<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Status Section -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_ready"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Current Session Info (only visible when sleeping) -->
        <TextView
            android:id="@+id/current_session_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current session: 0h 0m"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Main Action Button -->
        <Button
            android:id="@+id/sleep_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/btn_start_sleep"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Sleep Information Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/work_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_work_time_remaining"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/last_sleep_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_last_sleep_duration"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/average_sleep_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_average_sleep"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/session_count_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_session_count"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_settings"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/export_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_export_data"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/clear_data_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_clear_data"
                android:textColor="?android:attr/colorError"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

        </LinearLayout>

        <!-- Debug Information (for development) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_core_status"
            android:textSize="12sp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorTertiary"
            tools:visibility="visible" />

    </LinearLayout>

</ScrollView>